[colors]
background = #16161d
foreground = #bbbbc3
foreground-alt = #5a595f
primary = #007f68
secondary = #947c27
alert = #c74032
strong = #d7d7e0

[bar/0bar]
monitor =
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 24
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground-alt}
radius = 0.0
padding = 1
dpi-x = 120
dpi-y = 120
font-0 = Roboto Mono:size=11:style=bold;3
font-1 = NanumGothicCoding:size=11:style=bold;3
font-2 = FreeMono:size=11:style=bold;3
modules-left = powermenu ewmh xwindow
modules-right = cpu temperature memory filesystem wlan backlight pulseaudio battery date
tray-position = right
tray-padding = 1
tray-background = ${colors.background}
cursor-click = pointer
cursor-scroll = ns-resize
separator = "  "

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 0
label-open = pow
label-open-foreground = ${colors.primary}
label-close = cancel
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = logout
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.foreground}
menu-0-1 = sleep
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.foreground}
menu-0-2 = reboot
menu-0-2-exec = menu-open-3
menu-0-2-foreground = ${colors.foreground}
menu-0-3 = shutdown
menu-0-3-exec = menu-open-4
menu-0-3-foreground = ${colors.foreground}
menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-0-foreground = ${colors.foreground}
menu-1-1 = logout
menu-1-1-exec = "0bye logout"
menu-1-1-foreground = ${colors.alert}
menu-2-0 = sleep
menu-2-0-exec = "0bye sleep"
menu-2-0-foreground = ${colors.alert}
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
menu-2-1-foreground = ${colors.foreground}
menu-3-0 = reboot
menu-3-0-exec = "0bye reboot"
menu-3-0-foreground = ${colors.alert}
menu-3-1 = cancel
menu-3-1-exec = menu-open-0
menu-3-1-foreground = ${colors.foreground}
menu-4-0 = shutdown
menu-4-0-exec = "0bye shutdown"
menu-4-0-foreground = ${colors.alert}
menu-4-1 = cancel
menu-4-1-exec = menu-open-0
menu-4-1-foreground = ${colors.foreground}

[module/ewmh]
type = internal/xworkspaces
enable-click = false
enable-scroll = false
label-active = %name%
label-active-foreground = ${colors.foreground}
label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
format = <label-state>

[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%
label-foreground = ${colors.strong}
label-empty = x
label-empty-foreground = ${colors.foreground-alt}
format = <label>

[module/cpu]
type = internal/cpu
interval = 2.0
label = %percentage:2%%
label-foreground = ${colors.foreground}
format = <label>

[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input
interval = 2.0
warn-temperature = 60
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}
format = <label>
format-warn = <label-warn>

[module/memory]
type = internal/memory
interval = 4.0
label = %percentage_used%%
label-foreground = ${colors.foreground}
format = <label>M

[module/filesystem]
type = internal/fs
interval = 30.0
mount-0 = /
label-mounted = %percentage_used%%
label-mounted-foreground = ${colors.foreground}
format-mounted = <label-mounted>D

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 4.0
label-connected = %essid%
label-connected-foreground = ${colors.foreground}
label-disconnected = x
format-connected = <label-connected>W
format-disconnected = <label-disconnected>W

[module/backlight]
type = internal/backlight
card = intel_backlight
label = %percentage%%
label-foreground = ${colors.foreground}
format = <label>L

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 4.0
label-volume-foreground = ${colors.foreground}
label-muted = muted
label-muted-foreground = ${colors.foreground-alt}
format-volume = <label-volume>V

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 8.0
;full-at = 98
time-format = %R
label-charging = %percentage%%+%{F#5a595f}(%time%)%consumption%%{F-}
label-discharging = %percentage%%!%{F#5a595f}(%time%)%consumption%%{F-}
label-full = full
label-charging-foreground = ${colors.foreground}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

[module/date]
type = internal/date
interval = 8.0
date = %a%d%b
time = %H:%M
label = %{F#95959d}%date% %{F#d7d7e0}%time%%{F-}
format = <label>

[settings]
screenchange-reload = true

