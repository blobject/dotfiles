[core]
  autocrlf = input
  editor = kak
[alias]
  br = branch
  cm = commit
  co = checkout
  cu = !git commit --date="$(date --utc +%Y-%m-%dT%H:%M:%S%z)"
  df = diff
  dfs = diff --summary
  lo = log --graph --pretty=format:'%C(cyan)%h %C(yellow)%ad %C(green)%an %C(reset)%s%d'
  ls = ls-files
  nr = name-rev
  rb = rebase
  rl = reflog
  rs = reset
  s  = status --branch --short
  st = status
[log]
  date = format:%y-%m-%d %H:%M:%S
