<?xml version="1.0"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">

  <resistance>
    <strength>32</strength>
    <screen_edge_strength>256</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <focusLast>yes</focusLast>
    <followMouse>no</followMouse>
    <underMouse>no</underMouse>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
    <center>no</center>
    <monitor>Active</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>

  <theme>
    <name>0openbox</name>
    <animateIconify>no</animateIconify>
    <font place="ActiveWindow">
      <name>sans</name>
      <size>7</size>
      <weight>bold</weight>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Roboto Mono</name>
      <size>7</size>
      <weight>bold</weight>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Roboto Mono</name>
      <size>7</size>
      <weight>bold</weight>
    </font>
    <!--<keepBorder>yes</keepBorder>-->
    <titleLayout></titleLayout>
  </theme>

  <desktops>
    <number>3</number>
    <firstdesk>1</firstdesk>
    <popupTime>0</popupTime>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
    </names>
  </desktops>

  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Always</popupShow>
    <popupPosition>Top</popupPosition>
  </resize>

  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>

  <dock>
    <position>TopRight</position>
    <noStrut>no</noStrut>
    <stacking>Above</stacking>
    <direction>Horizontal</direction>
    <autoHide>no</autoHide>
  </dock>

  <mouse>
	  <doubleClickTime>300</doubleClickTime>
    <context name="Top Bottom Left Right TLCorner TRCorner BLCorner BRCorner Client">
      <mousebind action="Press" button="Left">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind action="Press" button="Middle">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind action="Press" button="Right">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>
    <context name="Top Bottom Left Right TLCorner TRCorner BLCorner BRCorner">
      <mousebind action="Drag" button="Left">
        <action name="Resize"/>
      </mousebind>
      <mousebind action="Drag" button="Middle">
        <action name="Resize"/>
      </mousebind>
      <mousebind action="Drag" button="Right">
        <action name="Resize"/>
      </mousebind>
    </context>
    <context name="Frame">
      <mousebind action="Drag" button="A-Left">
        <action name="Resize"/>
      </mousebind>
      <mousebind action="Drag" button="A-Middle">
        <action name="Resize"/>
      </mousebind>
      <mousebind action="Drag" button="A-Right">
        <action name="Resize"/>
      </mousebind>
      <mousebind action="Drag" button="W-Left">
        <action name="Move"/>
      </mousebind>
      <mousebind action="Drag" button="W-Middle">
        <action name="Move"/>
      </mousebind>
      <mousebind action="Drag" button="W-Right">
        <action name="Move"/>
      </mousebind>
    </context>
  </mouse>

  <keyboard>
    <keybind key="W-C-h">
      <action name="ResizeRelative">
        <right>-10</right>
      </action>
    </keybind>
    <keybind key="W-C-j">
      <action name="ResizeRelative">
        <bottom>10</bottom>
      </action>
    </keybind>
    <keybind key="W-C-k">
      <action name="ResizeRelative">
        <bottom>-10</bottom>
      </action>
    </keybind>
    <keybind key="W-C-l">
      <action name="ResizeRelative">
        <right>10</right>
      </action>
    </keybind>
    <keybind key="W-C-y">
      <action name="ResizeRelative">
        <bottom>-10</bottom>
        <right>-10</right>
      </action>
    </keybind>
    <keybind key="W-C-u">
      <action name="ResizeRelative">
        <bottom>-10</bottom>
        <right>10</right>
      </action>
    </keybind>
    <keybind key="W-C-b">
      <action name="ResizeRelative">
        <bottom>10</bottom>
        <right>-10</right>
      </action>
    </keybind>
    <keybind key="W-C-n">
      <action name="ResizeRelative">
        <bottom>10</bottom>
        <right>10</right>
      </action>
    </keybind>
    <keybind key="W-S-h">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>vertical</direction>
      </action>
      <action name="MoveResizeTo">
        <width>50%</width>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-S-j">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>horizontal</direction>
      </action>
      <action name="MoveResizeTo">
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
    </keybind>
    <keybind key="W-S-k">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>horizontal</direction>
      </action>
      <action name="MoveResizeTo">
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-S-l">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>vertical</direction>
      </action>
      <action name="MoveResizeTo">
        <width>50%</width>
      </action>
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-S-y">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-S-u">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-S-b">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-S-n">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>50%</width>
        <height>50%</height>
      </action>
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-S-1">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>vertical</direction>
      </action>
      <action name="MoveResizeTo">
        <width>38%</width>
      </action>
    </keybind>
    <keybind key="W-S-2">
      <action name="UnmaximizeFull"/>
      <action name="Maximize">
        <direction>vertical</direction>
      </action>
      <action name="MoveResizeTo">
        <width>62%</width>
      </action>
    </keybind>
    <keybind key="W-h">
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-j">
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
    </keybind>
    <keybind key="W-k">
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
    </keybind>
    <keybind key="W-l">
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-y">
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-u">
      <action name="MoveToEdge">
        <direction>north</direction>
      </action>
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-b">
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
      <action name="MoveToEdge">
        <direction>west</direction>
      </action>
    </keybind>
    <keybind key="W-n">
      <action name="MoveToEdge">
        <direction>south</direction>
      </action>
      <action name="MoveToEdge">
        <direction>east</direction>
      </action>
    </keybind>
    <keybind key="W-c">
      <action name="MoveResizeTo">
        <x>center</x>
        <y>center</y>
      </action>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-A-1">
      <action name="SendToDesktop">
        <to>1</to>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-A-2">
      <action name="SendToDesktop">
        <to>2</to>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-A-3">
      <action name="SendToDesktop">
        <to>3</to>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="W-A-4">
      <action name="SendToDesktop">
        <to>4</to>
        <follow>no</follow>
      </action>
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow">
        <dialog>no</dialog>
        <raise>yes</raise>
      </action>
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow">
        <dialog>no</dialog>
        <raise>yes</raise>
      </action>
    </keybind>
    <keybind key="W-comma">
      <action name="Focus"/>
      <action name="Lower"/>
    </keybind>
    <keybind key="W-period">
      <action name="Focus"/>
      <action name="Raise"/>
    </keybind>
    <keybind key="W-S-Escape">
      <action name="Close"/>
    </keybind>
    <keybind key="W-S-r">
      <action name="Reconfigure"/>
    </keybind>
    <keybind key="W-semicolon">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <keybind key="W-slash">
      <action name="ToggleAlwaysOnTop"/>
    </keybind>
    <keybind key="W-f">
      <action name="ToggleFullscreen"/>
    </keybind>
    <keybind key="W-m">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute">
        <command>0lum -5</command>
      </action>
    </keybind>
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute">
        <command>0lum +5</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>0vol x</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>0vol -2</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>0vol +2</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMicMute">
      <action name="Execute">
        <command>0vol mic x</command>
      </action>
    </keybind>
    <keybind key="C-XF86AudioMute">
      <action name="Execute">
        <command>0vol bt x</command>
      </action>
    </keybind>
    <keybind key="C-XF86AudioLowerVolume">
      <action name="Execute">
        <command>0vol bt -2</command>
      </action>
    </keybind>
    <keybind key="C-XF86AudioRaiseVolume">
      <action name="Execute">
        <command>0vol bt +2</command>
      </action>
    </keybind>
    <keybind key="C-XF86AudioMicMute">
      <action name="Execute">
        <command>0vol bt mic x</command>
      </action>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>0shot screen</command>
      </action>
    </keybind>
    <keybind key="C-Print">
      <action name="Execute">
        <command>0shot window</command>
      </action>
    </keybind>
    <keybind key="S-Print">
      <action name="Execute">
        <command>0shot select</command>
      </action>
    </keybind>
    <keybind key="W-Return">
      <action name="Execute">
        <command>xfce4-appfinder</command>
      </action>
    </keybind>
    <keybind key="W-e">
      <action name="Execute">
        <command>emacs</command>
      </action>
    </keybind>
    <keybind key="W-p">
      <action name="Execute">
        <command>pavucontrol</command>
      </action>
    </keybind>
    <keybind key="W-t">
      <action name="Execute">
        <command>alacritty</command>
      </action>
    </keybind>
    <keybind key="W-w">
      <action name="Execute">
        <command>qutebrowser</command>
      </action>
    </keybind>
    <keybind key="W-S-w">
      <action name="Execute">
        <command>firefox</command>
      </action>
    </keybind>
    <keybind key="W-A-w">
      <action name="Execute">
        <command>sh -c 'firefox --private-window --profile $HOME/p/firefox_proxy 2>/dev/null'</command>
      </action>
    </keybind>
    <keybind key="W-z">
      <action name="Execute">
        <command>xzoom</command>
      </action>
    </keybind>
  </keyboard>

  <applications>
    <application class="*">
      <decor>no</decor>
      <focus>yes</focus>
    </application>
    <application class="Xfce4-appfinder">
      <layer>above</layer>
      <position force="no">
        <x>center</x>
        <y>center</y>
      </position>
      <size>
        <width>40%</width>
        <height>50%</height>
      </size>
    </application>
    <application class="Polybar">
      <layer>below</layer>
    </application>
  </applications>
</openbox_config>
