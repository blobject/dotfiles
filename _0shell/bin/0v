#! /usr/bin/env tclsh

###############################################################################
# 0v: wrapper around qemu

source $::env(HOME)/bin/lib.tcl

need qemu-system-x86_64

###############################################################################

# attach the following usb device onto guest
set usb {2 2} ;# lsusb: "bus" "device"

set arg [lindex $::argv 0]
set ::argv [lrange $::argv 1 end]
switch -- $arg {
  m - mint {
    exec qemu-system-x86_64 -enable-kvm \
      -cpu host \
      -boot order=d \
      -device virtio-balloon \
      -device virtio-rng-pci \
      -drive file=$::env(HOME)/vm/mint/mint.img,if=virtio \
      -m 1G \
      -name mint \
      -net nic \
      -net user,hostname=v \
      -smp 2 \
      -soundhw all \
      -usb \
      {*}$::argv
  }
  #w - win {
  #  set usbbus [lindex $usb 0]
  #  set usbdev [lindex $usb 1]
  #  exec qemu-system-x86_64 -enable-kvm \
  #    -cpu host,hv_relaxed,hv_spinlocks=0x1fff,hv_vapic,hv_time \
  #    -device intel-hda -device hda-duplex \
  #    -device intel-iommu \
  #    -device qemu-xhci,id=xhci \
  #    -device virtio-balloon \
  #    -drive file=$::env(HOME)/vm/win/win.img,if=virtio,aio=native,cache.direct=on \
  #    -m 2G \
  #    -machine q35 \
  #    -name win \
  #    -net nic,model=virtio-net-pci \
  #    -net user,hostname=v \
  #    -smp 2 \
  #    -usb \
  #    -vga virtio \
  #    {*}$::argv
  #    #-device usb-host,bus=xhci.0,hostbus=$usbbus,hostaddr=$usbdev \
  #    #-device usb-ehci,id=ehci \
  #    #-audiodev pa,id=snd0 \
  #    #-display sdl,gl=on \
  #}
  default { usage {?|m_int} }
  #default { usage {?|m_int|w_in} }
}
