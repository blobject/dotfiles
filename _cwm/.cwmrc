borderwidth 4
color activeborder   "#3a393f" # darkest
color inactiveborder "#a3a3a9" # same as bar
color font           "#bbbbc3" # fg
color menubg         "#3a393f" # darkest
color menufg         "#95959d" # mid light
color selfont        "#16161d" # darkest
color urgencyborder  "#a92636" # red
color groupborder    "#4051b0" # blue
color ungroupborder  "#8b6b02" # yellow
fontname    "Iosevka:pixelsize=14:style=semibold"
gap         20 0 0 0
moveamount  5
snapdist    5
sticky      yes

ignore lemonbar
ignore stalonetray

command terminal     "0term"
command _fedora      "bgon 0qemu fedora"
command aseprite     "bgon aseprite"
command blender      "bgon blender"
command cataclysm    "bgon cataclysm-tiles"
command crawl        "bgon termite -c /home/b/cfg/misc/termite-alt -e crawl"
command emacs        "bgon emacsclient -nc"
command fbreader     "bgon FBReader"
command florence     "bgon 0florence"
command fontforge    "bgon fontforge"
command gimp         "bgon gimp"
command godot        "bgon godot"
command gpick        "bgon gpick"
command gucharmap    "bgon gucharmap"
command icecat       "bgon icecat"
command inkscape     "bgon inkscape"
command libreoffice  "bgon libreoffice"
command lxappearance "bgon lxappearance"
command pavucontrol  "bgon pavucontrol"
command vlc          "bgon 0wake vlc"
command wireshark    "bgon wireshark"
command xournal      "bgon xournal"
command xkill        "xkill"

#unbind-key M-Return
#unbind-key CM-Return
#unbind-key C-slash
#unbind-key MS-slash
#unbind-key M-Up
#unbind-key M-Down
#unbind-key M-h
#unbind-key M-j
#unbind-key M-k
#unbind-key M-l
#unbind-key CM-a
#unbind-key CM-f
#unbind-key CM-m
#unbind-key CM-x
unbind-key all
bind-key M-Tab  window-cycle
bind-key MS-Tab window-rcycle
bind-key 4-Tab  group-cycle
bind-key 4S-Tab group-rcycle
bind-key 4-1  group-toggle-1
bind-key 4-2  group-toggle-2
bind-key 4-3  group-toggle-3
bind-key 4M-1 window-movetogroup-1
bind-key 4M-2 window-movetogroup-2
bind-key 4M-3 window-movetogroup-3
bind-key 4-Return  menu-exec
bind-key 4S-Return menu-cmd
bind-key 4M-Return menu-window
bind-key 4-comma   window-lower
bind-key 4-period  window-raise
bind-key 4-f       window-fullscreen
bind-key 4-r       window-resize
bind-key 4-h      window-move-left-big
bind-key 4-j      window-move-down-big
bind-key 4-k      window-move-up-big
bind-key 4-l      window-move-right-big
bind-key 4C-h     window-vtile
bind-key 4C-j     window-vmaximize
bind-key 4C-k     window-htile
bind-key 4C-l     window-hmaximize
bind-key 4S-h     window-resize-left-big
bind-key 4S-j     window-resize-down-big
bind-key 4S-k     window-resize-up-big
bind-key 4S-l     window-resize-right-big
bind-key 4M-h     window-snap-left
bind-key 4M-j     window-snap-down
bind-key 4M-k     window-snap-up
bind-key 4M-l     window-snap-right
bind-key 4M-b     window-snap-down-left
bind-key 4M-n     window-snap-down-right
bind-key 4M-u     window-snap-up-right
bind-key 4M-y     window-snap-up-left
#bind-key XF86AudioMute           "0hot vol x"
bind-key XF86AudioLowerVolume    "0hot btd vol -"
bind-key XF86AudioRaiseVolume    "0hot btd vol +"
bind-key XF86MonBrightnessDown   "0hot lum mon -"
bind-key XF86MonBrightnessUp     "0hot lum mon +"
bind-key S-XF86MonBrightnessDown "0hot lum kbl -"
bind-key S-XF86MonBrightnessUp   "0hot lum kbl +"
bind-key 4-F11                   "0hot shot"
bind-key 4S-F11                  "0hot shot s"
bind-key 4C-F11                  "0hot shot w"
bind-key 4-F5                    "0hot wake"
bind-key 4M-F5                   "0hot rat"
bind-key 4-backslash             "0hot lay alt"
bind-key 4M-backslash            "0hot lay"
bind-key XF86PowerOff            "0hot off"
bind-key XF86Tools               "0hot off"
bind-key CM-BackSpace            "0hot off"
bind-key 4-b                     "0hot bt"
bind-key 4S-b                    "0hot bt restart"
bind-key 4-m                     "0hot btd moko"
bind-key 4M-m                    "0hot btd propoint"
bind-key 4-s                     "0hot btd jbl"
bind-key 4C-s                    "0hot btd blackstar"
bind-key 4S-s                    "0hot btd sennheiser"
bind-key 4MS-q    "bgon xkill"
bind-key 4-e      "bgon emacsclient -nc"
bind-key 4-grave  "0term"
bind-key 4M-grave "bgon termite -c /home/b/cfg/misc/termite-alt"
bind-key 4-w      "bgon icecat"
unbind-mouse CM-1
bind-mouse 4-1  window_move
bind-mouse 4-2  window_raise
bind-mouse 4S-2 window_lower
bind-mouse 4-3  window_resize
